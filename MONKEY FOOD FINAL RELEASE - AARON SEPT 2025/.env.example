# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Base de Datos MongoDB
MONGODB_URI=mongodb://localhost:27017/monkey_food_promo

# Configuración de Correo Electrónico
# Para Gmail, usar smtp.gmail.com y puerto 587
# Para otros proveedores, ajustar según corresponda
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicacion

# Correo corporativo para recibir notificaciones de ganadores
CORPORATE_EMAIL=empresa@monkeyfood.com

# Contraseña del panel de administración
# IMPORTANTE: Cambiar por una contraseña segura en producción
ADMIN_PASSWORD=Pecera@2025!

# Configuración de Seguridad (Opcional)
# Clave secreta para tokens CSRF (se genera automáticamente si no se especifica)
# CSRF_SECRET=tu_clave_secreta_aqui

# Configuración de Rate Limiting (Opcional)
# Número máximo de solicitudes por IP por ventana de tiempo
# RATE_LIMIT_MAX=100
# Ventana de tiempo en milisegundos (15 minutos por defecto)
# RATE_LIMIT_WINDOW=900000

# Configuración de la Promoción
MAX_ENTRIES_PER_DEVICE=1